<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title> <%= category.name %></title>
</head>
<body>
  <div class="wrapper">
    <%- include('partials/navbar') %>
    <div class="container">
        <h1 style="text-align: center;" class="title-items" ><%= category.name %></h1>
 
        <table class="items-container">
          <thead class="items-header">
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Price</th>
              <th>Category</th>
              <th>Size</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(item => { %>
            <tr class="items-card">
              <td><%= item.id %></td>
              <td><%= item.name %></td>
              <td>Â£<%= item.price %></td>
              <td class="category-name"><%= item.category_name %></td>
              <td><%= item.size %></td>
              <td class="item-icons">
                <a href="/items/update/<%= item.id %>" aria-label="Update">
                  <i class="fa-regular fa-pen-to-square"></i>
                </a>
                <form action="items/delete/<%= item.id %>" method="POST">
                  <input type="hidden" name="id" value="<%= item.id %>">
                  <button class="delete-item-btn" type="submit" onclick="return confirm('Are you sure you want to delete this item?');">
                    <i class="fa-solid fa-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>

    </div>
  </div>
</body>
</html>
