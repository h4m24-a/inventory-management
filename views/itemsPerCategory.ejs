<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title> <%= category.name %></title>
</head>
<body>
  <div class="wrapper">
    <%- include('partials/navbar') %>
    <div class="container">
        <h1 style="text-align: center;" class="title-items" ><%= category.name %></h1>
      <div class="items-container">
        <div class="items-header">
          <p>ID</p>
          <p>Name</p>
          <p>Price</p>
          <p>Category</p>
          <p>Size</p>
          <p>Action</p>
        </div>
        <% items.forEach(item => { %>
        <div class="items-card">
          <p><%= item.id %></p>
          <p><%= item.name %></p>
          <p>Â£<%= item.price %></p>
          <p class="category-name"><%= item.category_name %></p>
          <p><%= item.size %></p>
          <div class="item-icons">
            <a href="/items/update/<%= item.id %>" aria-label="Update">
              <i class="fa-regular fa-pen-to-square"></i>
            </a>
            <form action="/categories/<%= item.category_id %>/items/delete/<%= item.id %>" method="POST">
              <input type="hidden" name="id" value="<%= item.id %>">
              <button class="delete-item-btn" type="submit" onclick="return confirm('Are you sure you want to delete this item?');">
                <i class="fa-solid fa-trash"></i>
              </button>
            </form>
            
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</body>
</html>
