<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css">
    <title>Items</title>
  </head>
  <body>
    <div class="wrapper">
      <%- include('partials/navbar') %>
      <div class="container">
        <div class="item-buttons-container">
          <h1 class="title-items" >All Items</h1>
          <a class="item-button" href="/items/new" aria-label="Item Form"> <i class="fa-solid fa-arrow-up-from-bracket"></i> Add Item</a>
        </div>
        <div class="items-container">
          <div class="items-header">
            <p>ID</p>
            <p>Name</p>
            <p>Price</p>
            <p>Category</p>
            <p>Size</p>
            <p>Action</p>
          </div>
          <% items.forEach(item => { %>
          <div class="items-card">
            <p><%= item.id %></p>
            <p><%= item.name %></p>
            <p>Â£<%= item.price %></p>
            <p class="category-name"><%= item.category_name %></p>
            <p><%= item.size %></p>
            <div class="item-icons">
              <a href="/items/update/<%= item.id %>" aria-label="Update">
                <i class="fa-regular fa-pen-to-square"></i>
              </a>
              <a href="" aria-label="Delete">
                <i class="fa-solid fa-trash"></i>
              </a>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
