<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <link rel="shortcut icon" href= "/images/logo/favicon32.png>">
  <title>Sneaker Shelf - Inventory Manager</title>
</head>
<body>
   <div class="wrapper">
     <%- include('partials/navbar') %>
     <div class="container">
      <div class="profile">
        <% if (currentUser) { %>
          <p class="current-user"><%= currentUser.username %> <i class="fa-solid fa-angle-down"></i></p>
          <div class="profile-modal">
            <p class="username-modal"><%= currentUser.username %></p>
            <div class="line"></div>
            <a class="log-out-button" href="/auth/log-out"><i class="fa-solid fa-arrow-right-from-bracket"></i>Log Out</a>
          </div>
        <% } %>
      </div>
       <p class="title">Track, manage, and grow your sneaker collection effortlessly</p>
       
        <p class="sub-title">Select  Category</p>
           <div class="categories-container">
           <% categories.forEach(category => { %>
            <div class="category-card">
              <p><%= category.name %></p>
              <p class="sneaker-count">Number of Sneakers: <%= category.sneaker_count %></p>
              <a href="/categories/<%= category.id %>/items">
                <img class="category-image" src="/images/categories/<%= category.image_filename %>"  alt="<%= category.name %>"> </a>
                
                <div class="category-button">
                  <form action="categories/delete/<%= category.id %>" method="POST">
                    <input type="hidden" name="id" value="<%= category.id %>" >
                    <button class="delete-btn" type="submit" onclick="return confirm('Are you sure you want to delete this category?');">Delete</button>
                  </form>
                  <a type="submit" class="update-btn" href="/categories/update/<%= category.id %>">Update</a>
                </div>
            </div>
           
           
           <% }); %>
         
       </div>
     </div>

   </div>
</body>
</html>
